{
  "version": 2,
  "builds": [
    {
      "src": "codeConversion/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python" 
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "codeConversion/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "codeConversion.settings"
  },
  "installCommand": "python -m pip install -r requirements.txt",
  "buildCommand": "python manage.py collectstatic --noinput"
}